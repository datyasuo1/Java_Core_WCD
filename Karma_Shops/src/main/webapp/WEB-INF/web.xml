<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>ListProductServlet</servlet-name>
        <servlet-class>com.example.karma_shops.controller.admin.product.ListProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListProductServlet</servlet-name>
        <url-pattern>/admin/products/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateProductServlet</servlet-name>
        <servlet-class>com.example.karma_shops.controller.admin.product.CreateProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateProductServlet</servlet-name>
        <url-pattern>/admin/products/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditProductServlet</servlet-name>
        <servlet-class>com.example.karma_shops.controller.admin.product.EditProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditProductServlet</servlet-name>
        <url-pattern>/admin/products/edit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DetailProductServlet</servlet-name>
        <servlet-class>com.example.karma_shops.controller.admin.product.DetailProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailProductServlet</servlet-name>
        <url-pattern>/admin/products/detail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteProductServlet</servlet-name>
        <servlet-class>com.example.karma_shops.controller.admin.product.DeleteProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteProductServlet</servlet-name>
        <url-pattern>/admin/products/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HomeUserServlet</servlet-name>
        <servlet-class>com.example.karma_shops.controller.user.HomeUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeUserServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListProductUserServlet</servlet-name>
        <servlet-class>com.example.karma_shops.controller.user.ListProductUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListProductUserServlet</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ShowCartServlet</servlet-name>
        <servlet-class>com.example.karma_shops.controller.user.ShowCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowCartServlet</servlet-name>
        <url-pattern>/cart/show</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddCartServlet</servlet-name>
        <servlet-class>com.example.karma_shops.controller.user.AddCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCartServlet</servlet-name>
        <url-pattern>/cart/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteCartServlet</servlet-name>
        <servlet-class>com.example.karma_shops.controller.user.DeleteCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCartServlet</servlet-name>
        <url-pattern>/cart/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CheckOutServlet</servlet-name>
        <servlet-class>com.example.karma_shops.controller.user.CheckOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckOutServlet</servlet-name>
    <url-pattern>/cart/checkout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProductDetailServlet</servlet-name>
        <servlet-class>com.example.karma_shops.controller.user.ProductDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductDetailServlet</servlet-name>
        <url-pattern>/products/detail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FilterCategoryServlet</servlet-name>
        <servlet-class>com.example.karma_shops.controller.user.FilterCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FilterCategoryServlet</servlet-name>
        <url-pattern>/filter/cate</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.example.karma_shops.controller.account.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
</web-app>